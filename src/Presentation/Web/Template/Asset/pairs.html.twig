{% extends 'base.html.twig' %}

{% block title %}Lista de pares de divisas{% endblock %}

{% block body %}

    <h1>Lista de pares de divisas</h1>

    {% if pairs | length > 0 %}
        <ul>
            {% for pair in pairs %}
                <li>
                    <a href="{{ path('pair', {'symbol': pair.symbol}) }}">{{ pair.symbol }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}
