{% extends 'base.html.twig' %}

{% block title %}Divisa {{ symbol }}{% endblock %}

{% block body %}

    <h1>Divisa {{ symbol }}</h1>

    <p><a href="{{ path('assets') }}">Volver</a></p>

    <div class="container">
        <h2>Resumen</h2>
        {% if asset is null %}
            No hay ninguna divisa con el símbolo indicado.
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Símbolo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Decimales</th>
                    <th scope="col">¿Permite staking?</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ asset.symbol }}</td>
                    <td>{{ asset.name }}</td>
                    <td>{{ asset.type }}</td>
                    <td>{{ asset.displayDecimals }} ({{ asset.decimals }})</td>
                    <td>{% if asset.canBeStaked %}Sí{% else %}No{% endif %}</td>
                </tr>
                </tbody>
            </table>
        {% endif %}
    </div>

    <div class="container">
        <h2>Pares</h2>
        {% if pairs is null %}
            No se encontraron pares con esta divisa.
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Símbolo</th>
                    <th scope="col">Base</th>
                    <th scope="col">Quote</th>
                    <th scope="col">Decimales</th>
                    <th scope="col">Compra mínima (base)</th>
                </tr>
                </thead>
                <tbody>
                {% for pair in pairs %}
                    <tr>
                        <td>{{ pair.symbol }}</td>
                        <td>{{ pair.baseSymbol }}</td>
                        <td>{{ pair.quoteSymbol }}</td>
                        <td>{{ pair.decimals }}</td>
                        <td>{{ pair.orderMin }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}
