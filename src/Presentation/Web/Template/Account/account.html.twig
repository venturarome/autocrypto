{% extends 'base.html.twig' %}

{% block title %}Cuenta {{ reference }}{% endblock %}

{% block body %}

    <h1>Cuenta {{ reference }}</h1>

    <p><a href="{{ path('accounts') }}">Volver</a></p>

    <div class="container">
        <h2>Resumen</h2>
        {% if account is null %}
            No hay ninguna cuenta con la referencia indicada.
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Referencia</th>
                    <th scope="col">¿Activa?</th>
                    <th scope="col">Fecha creación</th>
                    <th scope="col">¿Puede comprar?</th>
                    <th scope="col">¿Puede vender?</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ account.reference }}</td>
                    <td>{{ account.active }}</td>
                    <td>{{ account.createdAt | date('Y-m-d') }}</td>
                    <td>{{ account.canBuy }}</td>
                    <td>{{ account.canSell }}</td>
                </tr>
                </tbody>
            </table>
        {% endif %}
    </div>

    <div class="container">
        <h2>Balance</h2>
        {% if balances is null %}
            No se encontraron posiciones.
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Símbolo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo de activo</th>
                    <th scope="col">Tipo de posición</th>
                    <th scope="col">Importe</th>
                </tr>
                </thead>
                <tbody>
                {% for balance in balances %}
                    <tr>
                        <td>{{ balance.assetSymbol }}</td>
                        <td>{{ balance.assetName }}</td>
                        <td>{{ balance.assetType }}</td>
                        <td>{{ balance.type }}</td>
                        <td>{{ balance.amount }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}
